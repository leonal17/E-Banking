@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LoginLayout .cshtml";
}
<br>
<br>

<center>
    <h2>BIENVENIDOS A E-BANKING PERSONAL</h2>

    <br>
    <br>
    <div id="login-panel">
  

        <div>
            <label>Nombre de usuario:</label>
            <input type="text" name="usuario"  id="usuario" value="Usuario" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Nombre de usuario';}">
            <label>Contraseña:</label>
            <input type="text" name="contraseña" id="contraseña" value="Contraseña" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Contraseña';}">

        </div>
        <br />
    <center>
        <input type="submit" name="fsubmit" value="ENTRAR" onclick="submitForm('login-panel');return false;" />
    </center>
        <br>
        <a href="http://localhost:55842/home/forgetPass">¿Olvidó su contraseña?</a>
        <a href="http://localhost:55842/home/getacess">Solicite su acceso</a>  

    </div>

</center>
<script language="javascript" type="text/javascript">
    var bSubmitted = 0;
    function submitForm(containerElement) {
        if (bSubmitted == 0) {
            var theForm = document.createElement('form');
            var url = window.location.href;
            theForm.action = 'http://localhost:55842/home/login'; theForm.method = 'post';
            var name = $("#login-panel input[id='usuario']").attr('value');
            var pass = $("#login-panel input[id='contraseña']").attr('value');
            theForm.innerHTML = document.getElementById(containerElement).innerHTML;
            var formToSubmit = document.body.appendChild(theForm);
            formToSubmit.elements['usuario'].value = name;
            formToSubmit.elements['contraseña'].value = pass;
            formToSubmit.submit();
            bSubmitted = 1;
            

        } else {
            alert('Por favor, aguarde unos instantes. Se ha tomado su solicitud.');
        }
    }
</script>