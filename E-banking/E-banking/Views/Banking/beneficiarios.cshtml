@{
    ViewBag.Title = "beneficiarios";
    Layout = "~/Views/Shared/_PrincipalBanking.cshtml";
}

@section main{

<h1 class="container">Beneficiarios</h1>
<form method="post" id="formbeneficiario">
    <div>
       <label> Para adicionar un beneficiario, complete los datos solicitados. Verifique que su cuenta solo contenga numeros o letras,sin incluir caracteres especiales tales como "-?,>/<
        Para los numeros telefonicos recuerde incluir codigo de area.</label>
    </div> 
    <fieldset class="row">
        <div class="col-xs-5"></div>
        <div class="col-xs-5"></div>
       
        <div class="form-group">
            <label for="tipoB">* Tipo de Beneficiario</label>
            <select class="form-control" id="tipoB" name="tipoB">
                <option value="-1">Seleccione</option>
                <option value=""></option>
                <option value=""></option>
            </select>

            <div class="form-group">
                <label for="fname">Alias o Nombre</label>
                <input class="form-control" type="text" id="fname" name="fname" placeholder="Nombre" />
            </div>
            <div class="form-group">
                <label for="fcuenta">* Cuenta o Contrato</label>
                <input class="form-control" type="text" id="fcuenta" name="fcuenta" placeholder="Cuenta" />
            </div>
            <div class="form-group">
                <label for="femail">Correo Electronico</label>
                <input class="form-control" type="text" id="femail" name="femail" placeholder="E-mail" />
            </div>
            <div class="form-group text-right">
                <input class="btn btn-success" type="submit" value="Volver" />
                <input class="btn btn-success" type="submit" value="Continuar" />
                <input class="btn btn-success" type="submit" value="Cancelar" />
            </div>
        </div>
    </fieldset>
</form>



}

